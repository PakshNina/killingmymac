# Build stage
FROM golang:1.24.1 AS builder

WORKDIR /app

COPY go.mod ./
COPY withstat ./withstat

RUN CGO_ENABLED=0 GOOS=linux go build \
    -a -installsuffix cgo \
    -o app \
    ./withstat

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

COPY --from=builder /app/app .

EXPOSE 8080

CMD ["./app"]
